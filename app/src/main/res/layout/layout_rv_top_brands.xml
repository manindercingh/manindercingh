<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginStart="3dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/app_logo"
        app:civ_border_color="@color/dark_grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/bg_button_square"
        android:backgroundTint="@color/blue"
        android:gravity="center|center_vertical"
        android:paddingHorizontal="5dp"
        android:paddingTop="2dp"
        android:text="60% OFF..."
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="MC Donald's"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="41 mins"
        android:layout_gravity="center_horizontal"
        android:textSize="10sp"
        app:drawableStartCompat="@drawable/ic_baseline_timer_24"
        app:drawableTint="@color/green_leaf"
        tools:ignore="SmallSp" />


</LinearLayout>