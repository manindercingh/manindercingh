                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="5dp"
                    android:text="Enter a Valid Phone"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
