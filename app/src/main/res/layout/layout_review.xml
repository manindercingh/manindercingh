<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="130dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/img_profile" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/txtRatings"
            android:layout_toEndOf="@id/imgProfile"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="James Gosling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Followers"
                android:textSize="12sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/txtRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_txt_ratings"
            android:backgroundTint="@color/green_leaf"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:paddingHorizontal="7dp"
            android:text="4.1"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/ic_baseline_star_24"
            app:drawableTint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imgProfile"
            android:layout_marginHorizontal="10dp"
            android:paddingTop="5dp"
            android:lineHeight="6dp"
            android:maxLines="3"
            android:text="@string/restaurant_review"
            android:textSize="12sp"
            tools:ignore="UnusedAttribute" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>